{
  "extends": ["eslint:all"],
  "env": {
    "es6": true,
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "script",
    "ecmaFeatures": {
      "impliedStrict": true
    }
  },
  "rules": {
    "array-element-newline": ["off"],
    "arrow-parens": ["error", "as-needed"],
    "arrow-body-style": ["off"],
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
    "capitalized-comments": ["off"],
    "class-methods-use-this": ["off"],
    "dot-location": ["error", "property"],
    "func-names": ["error", "as-needed"],
    "func-style": ["off"],
    "function-call-argument-newline": ["error", "consistent"],
    "id-length": ["off"],
    "indent": ["error", 2, { "SwitchCase": 1, "ignoredNodes": ["JSXOpeningElement"] }],
    "init-declarations": ["off"],
    "line-comment-position": ["off"],
    "linebreak-style": ["off"],
    "max-classes-per-file": ["off"],
    "max-len": ["error", { "code": 160, "ignoreStrings": true, "ignoreTemplateLiterals": true }],
    "max-lines": ["error", { "max": 500, "skipBlankLines": true, "skipComments": true }],
    "max-lines-per-function": ["off"],
    "max-params": ["error", 8],
    "max-statements": ["off"],
    "multiline-comment-style": ["off"],
    "multiline-ternary": ["error", "always-multiline"],
    "new-cap": ["error", { "capIsNewExceptionPattern": "^express\\.Router" }],
    "newline-per-chained-call": ["off"],
    "no-confusing-arrow": ["off"],
    "no-console": ["off"],
    "no-empty-function": ["off"],
    "no-extra-parens": ["error", "all", { "nestedBinaryExpressions": false, "ignoreJSX": "all" }],
    "no-implicit-coercion": ["error", { "allow": ["!!", "~"] }],
    "no-inline-comments": ["off"],
    "no-magic-numbers": ["off"],
    "no-multiple-empty-lines": ["error", { "max": 1, "maxEOF": 1 }],
    "no-negated-condition": ["off"],
    "no-ternary": ["off"],
    "no-underscore-dangle": ["off"],
    "no-unused-vars": ["error", { "ignoreRestSiblings": true }],
    "object-curly-spacing": ["error", "always"],
    "object-curly-newline": ["error", { "consistent": true }],
    "object-property-newline": ["error", { "allowAllPropertiesOnSameLine": true }],
    "one-var": ["error", "never"],
    "operator-linebreak": ["error", "before"],
    "padded-blocks": ["off"],
    "prefer-destructuring": ["off"],
    "prefer-named-capture-group": ["off"],
    "require-jsdoc": ["off"],
    "sort-imports": ["off"],
    "sort-keys": ["off"],
    "space-before-function-paren": ["error", { "anonymous": "always", "named": "never", "asyncArrow": "always" }],
    "quote-props": ["error", "consistent-as-needed"],
    "quotes": ["error", "single"],
    "require-unicode-regexp": ["off"],
    "wrap-iife": ["error", "inside"]
  }
}
